{
  "name": "primrose",
  "description": "Primrose is a framework for building Virtual Reality applications in Web browsers.",
  "version": "0.28.18",
  "engines": {
    "node": ">=4.0.0"
  },
  "author": "Sean T. McBeth <sean@seanmcbeth.com> (https://www.seanmcbeth.com)",
  "license": "GPL-3.0",
  "homepage": "https://www.primrosevr.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/NotionTheory/Primrose.git"
  },
  "bugs": "https://trello.com/b/NVZsaC1P/primrose-development-tasks",
  "files": [
    "LICENSE.md",
    "README.md",
    "CONTRIBUTORS.md",
    "CHANGELOG.md",
    "Primrose.js",
    "Primrose.min.js",
    "PrimroseLib.js",
    "PrimroseDependencies.js",
    "quickstart/",
    "src/",
    "doc/"
  ],
  "scripts": {
    "start": "node StartHere.js --url doc/"
  },
  "keywords": [
    "virtual reality",
    "VR",
    "framework",
    "text",
    "editor",
    "HTML5",
    "canvas",
    "syntax",
    "highlighting"
  ],
  "dependencies": {
    // This package is used in the doc pages to be able to support details/summary
    // view for browsers that don't yet have this useful HTML element.
    "lavu-details-polyfill": "^0.1.0"
  },
  "devDependencies": {
    // Use to perform debugging on iOS and to forward logging
    // output to a texture.
    "bare-bones-logger": "^2.0.0",

    // Fixes a critical bug on iOS 9
    "iphone-inline-video": "^1.9.3",

    // Include Markdown file contents in HTML files via Pug templates.
    "jstransformer-marked": "^1.0.1",

    // Remove the documentation objects from the source files and render
    // documentation objects into documentation pages.
    "pliny": "^3.2.6",

    // Provide Promises for IE.
    "promise-polyfill": "^5.2.1",

    // Manage the build process and drastically simplify it.
    "notiontheory-basic-build": "^2.7.0",

    // WebGL scene-graph library.
    "three": "^0.80.0",

    // Provide WebVR API on systems that support Device Motion API but don't yet
    // have WebVR API.
    "webvr-polyfill": "github:notiontheory/webvr-polyfill",

    // Represent the regular monitor through the WebVR API to simplify handling
    // multiple types of displays.
    "webvr-standard-monitor": "^1.0.1"
  }
}
